rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ユーザードキュメント
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ワークアウトログ
    match /logs/{logId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }
    
    // 未完了ログ（Draft Logs）
    match /draftLogs/{draftId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // 種目 (Movements)
    match /movements/{movementId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; // Allow creation for seeding defaults & custom
      allow update, delete: if request.auth != null && (
        resource.data.uid == request.auth.uid || resource.data.isDefault == true
      );
    }

    // Personal Records (Simplified for debugging)
    match /prs/{prId} {
        allow read, write: if request.auth != null;
    }
  }
}
